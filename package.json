{
  "name": "monaco-jsx-syntax-highlight",
  "version": "1.1.0",
  "description": "Highlight the jsx or tsx syntax for monaco editor",
  "keywords": [
    "monaco",
    "jsx",
    "highlight",
    "tsx",
    "monaco-editor",
    "syntax"
  ],
  "scripts": {
    "test": "jest",
    "clear": "rm -rf lib",
    "init": "node ./scripts/mode.js --mode=dev",
    "demo": "parcel demo/index.html",
    "precompile": "npm run test && node ./scripts/mode.js --mode=build",
    "compile": "npm run clear && rollup -c",
    "postcompile": "node ./scripts/generate-worker-json.js && node ./scripts/mode.js --mode=dev"
  },
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.module.js",
  "types": "./lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x-glorious/monaco-jsx-syntax-highlight.git"
  },
  "author": "x-glorious",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/x-glorious/monaco-jsx-syntax-highlight/issues"
  },
  "homepage": "https://github.com/x-glorious/monaco-jsx-syntax-highlight#readme",
  "devDependencies": {
    "@lopatnov/rollup-plugin-uglify": "^2.1.2",
    "@monaco-editor/react": "^4.4.5",
    "@parcel/transformer-sass": "^2.6.2",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "buffer": "^6.0.3",
    "eslint": "^8.15.0",
    "jest": "^28.1.3",
    "minimist": "^1.2.6",
    "parcel": "^2.6.2",
    "prettier": "^2.6.2",
    "process": "^0.11.10",
    "rollup": "^2.72.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "rollup-pluginutils": "^2.8.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
