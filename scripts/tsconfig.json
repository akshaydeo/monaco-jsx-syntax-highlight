{
  "compilerOptions": {
    "rootDirs": ["./src"],
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "lib": ["es5", "dom", "ScriptHost", "es2015"],
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
